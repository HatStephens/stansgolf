<section class="main">

  <p style="padding:0px; margin:0px">Click on the event to load up more information including maps:<br><br></p>
  <article class="quarterly">
    <% @events.regular.each do |event| %>
      <h4><%= link_to("#{l event.event_date} - #{event.location} - #{number_to_currency(event.cost)}", event_path(event)) %></h4>
      <% if event.reports.any? %>
        <% event.reports.each do |report| %>
          <%= link_to("#{report.sub_title}", report_path(report)) %>
        <% end %>
      <% end %>
      <p></p>
      <br/><br/>
    <% end %>
  </article>
  <article class="specialist">
    <h4><a href="">Knockout Competition 2016</a><br>
    <br>
    <a href="">Ryder Cup 2017</a><br></h4>
  </article>
</section>
